<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<fx:root alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="main"
         stylesheets="@../assets/styles/Countries.css" type="VBox" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml">
   <padding>
      <Insets bottom="20.0" top="20.0"/>
   </padding>
   <ScrollPane fx:id="scrollpane" fitToWidth="true" maxWidth="1.7976931348623157E308" prefWidth="700.0"
               style="-fx-background-color: transparent;" styleClass="scrollpane"
               stylesheets="@../assets/styles/Countries.css" VBox.vgrow="NEVER">
      <padding>
         <Insets right="20.0"/>
      </padding>
   </ScrollPane>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets/>
         </HBox.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
         <Button fx:id="prevpage" mnemonicParsing="false" prefWidth="180.0"
                 style="-fx-background-color: #ff6f3b; -fx-text-fill: white; -fx-background-radius: 25px;"
                 text="← Previous">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
         </Button>
      </VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
         <Label text="Viewing page"/>
         <Label fx:id="pages" text="Label">
            <font>
               <Font size="18.0"/>
            </font>
         </Label>
      </VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
         <Button fx:id="nextpage" mnemonicParsing="false" prefWidth="180.0"
                 style="-fx-background-color: #ff6f3b; -fx-text-fill: white; -fx-background-radius: 25px;"
                 text="Next →">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
         </Button>
      </VBox>
   </HBox>
</fx:root>
